<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- box icons -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    <header>
      <nav class="navbar">
        <a class="navbar-brand" href="#">DailyPoints</a>
        <ul>
          <% if(!currentUser) { %>
          <li><a href="/auth/signup">Signup</a></li>
          <li><a href="/auth/login">Login</a></li>
          <% } else { %>
          <li><a href="/auth/logout">Logout</a></li>
          <li><a href="/profile">Profile</a></li>
          <% } %>
        </ul>
      </nav>
    </header>

    <section class="home" id="home">
      <div class="home-content">
        <h1>Earn Daily</h1>
        <p>Review The latest Products and Earn Points</p>
        <div class="social-media">
          <i class="bx bxs-shopping-bags"></i>
          <i class="bx bx-right-arrow-alt" id="media"></i>
          <i class="bx bx-notepad"></i>
          <i class="bx bx-right-arrow-alt" id="media"></i>
          <i class="bx bx-coin"></i>
        </div>
        <a href="/auth/signup" class="btn">Sign Up</a>
      </div>

      <div class="home-img">
        <img src="https://i.imgur.com/QkIa5tT.jpeg" alt="" />
      </div>
    </section>
  </body>
</html>
