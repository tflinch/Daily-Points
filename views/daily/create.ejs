<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body>
    <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    <header>
      <nav class="navbar">
        <a class="navbar-brand" href="/">DailyPoints</a>
        <ul>
          <% if(!currentUser) { %>
          <li><a href="/auth/signup">Signup</a></li>
          <li><a href="/auth/login">Login</a></li>
          <% } else { %>
          <li><a href="/auth/logout">Logout</a></li>
          <li><a href="/profile">Profile</a></li>
          <% } %>
        </ul>
      </nav>
    </header>
    <div class="container text-center contact">
      <h4 class="heading"><span><%=product.title%></span></h4>
      <div class="home-img">
        <img src="<%=product.img %>" alt="" />
        <p><%=product.points %></p>
        <p><%=product.description %></p>
      </div>
      <form action="/daily/product" method="POST">
        <div class="input-box">
          <label for="title">New Product Name:</label>
          <input
            type="text"
            placeholder="<%=product.title%>"
            name="title"
            required
          />
        </div>
        <div class="input-box">
          <label for="points">New Product Points:</label>
          <input
            type="number"
            name="points"
            placeholder="<%=product.points%>"
            required
          />
        </div>
        <textarea
          name="description"
          id="message"
          cols="30"
          rows="10"
          placeholder="New description"
          class="item"
          autocomplete="off"
        ></textarea>
        <input type="submit" value="update" class="btn" />
      </form>
    </div>
  </body>
</html>
