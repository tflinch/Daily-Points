<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body>
    <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    <header>
      <nav class="navbar">
        <a class="navbar-brand" href="/">DailyPoints</a>
        <ul>
          <% if(!currentUser) { %>
          <li><a href="/auth/signup">Signup</a></li>
          <li><a href="/auth/login">Login</a></li>
          <% } else { %>
          <li><a href="/auth/logout">Logout</a></li>
          <li><a href="/profile">Profile</a></li>
          <% } %>
        </ul>
      </nav>
    </header>

    <section class="timeline">
      <div class="timeline-row">
        <div class="timeline-column">
          <h2 class="title">
            <span class="title-veggies" style="--i: 1">LeaderBoard</span>
          </h2>
          <div class="timeline-box">
            <div class="timeline-content">
              <div class="content">
                <div class="year"><i class="bx bx-trophy"></i> # 1</div>
                <h3>User: <span>Name</span></h3>
                <p>Total Points: <span>5000</span></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
