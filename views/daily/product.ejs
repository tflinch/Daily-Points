<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body>
    <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    <header>
      <nav class="navbar">
        <a class="navbar-brand" href="/">DailyPoints</a>
        <ul>
          <% if(!currentUser) { %>
          <li><a href="/auth/signup">Signup</a></li>
          <li><a href="/auth/login">Login</a></li>
          <% } else { %>
          <li><a href="/auth/logout">Logout</a></li>
          <li><a href="/profile">Profile</a></li>
          <% } %>
        </ul>
      </nav>
    </header>
    <p class="text-center">4 reveiws left</p>

    <div class="container text-center contact">
      <h4 class="heading">Product: <span>Name</span></h4>
      <div class="home-img">
        <img src="https://i.imgur.com/QkIa5tT.jpeg" alt="" />
        <p>Points</p>
        <p>
          Description: Lorem ipsum dolor sit amet consectetur adipisicing elit.
          Culpa, sint!
        </p>
      </div>
      <form action="/review" method="POST">
        <div class="input-box">
          <label for="number">What would rate this item?</label>
          <input
            type="number"
            placeholder="1-5"
            name="rating"
            max="5"
            min="1"
            required
          />
        </div>
        <div class="input-box">
          <label for="purchase">Would you buy?</label>
          <select name="purchase" id="purchase">
            <option value="yes">yes</option>
            <option value="no">no</option>
          </select>
        </div>
        <textarea
          name="content"
          id="message"
          cols="30"
          rows="10"
          placeholder="Your Message"
          class="item"
          autocomplete="off"
        ></textarea>
        <input type="submit" value="New Review" class="btn" />
      </form>
    </div>
  </body>
</html>
