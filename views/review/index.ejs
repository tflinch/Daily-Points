<%- include('../partials/header.ejs') %>
<section class="contact" id="contact">
  <h1 class="heading">Latest Items to <span>Review</span></h1>
  <div class="container profile">
    <div class="row justify-content-center">
      <% for (let i = 0; i < products.length; i++) {%> <% let product =
      products[i] %>
      <div class="col-md-6 d-flex justify-content-center">
        <div class="card mb-4">
          <img
            src="<%= product.image %>"
            class="card-img-top p-3"
            style="height: 15rem; width: 100%; object-fit: cover"
            alt="..."
          />
          <div class="card-body d-flex flex-column">
            <h3 class="card-title mt-3 title"><%= product.title %></h3>
            <p class="card-span mt-3">Points: <%= product.points %></p>
            <p class="card-text mt-3 description"><%= product.description %></p>
            <a href="/review/product/<%=product.id %>" class="btn mt-auto"
              >New product review</a
            >
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
<%- include('../partials/footer.ejs') %>
