<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous"
  />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body>
    <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

    <div class="alert alert-success"><%= msg %></div>
    <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
    <div class="alert alert-danger"><%= msg %></div>
    <% }) %> <% } %>

    
      <nav class="navbar navbar-expand-lg navbar-dark bg-ligt">
      <a class="navbar-brand" href="#">Daily Points</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarText"
        aria-controls="navbarText"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/"
              >Home <span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/contact"
              >Contact <span class="sr-only">(current)</span></a
            >
          </li>
          <% if(!currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/auth/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">Profile</a>
          </li>
          <% } %>
        </ul>
      </div>
    </nav>
    

    <div class="container text-center profile">
      <div class="row">
    <div class="col">
      <h2 class="heading">Create New <span>Products</span></h2>
      <div class="home-img">
        <img src="https://i.imgur.com/QkIa5tT.jpeg" alt="" />
        <a href="/daily" class="btn">Create</a>
      </div>
      <h2 class="heading">Review <span>Products</span></h2>
      <div class="home-img">
        <img src="https://i.imgur.com/QkIa5tT.jpeg" alt="" />
        <a href="/review" class="btn">Review</a>
      </div>
    </div>
    <div class="col">
      <h2 class="heading">Profile <span>Stats</span></h2>
      <div id="profile">
        
      <div class="input-box">
        <i class='bx bx-info-circle' ></i>
          <h3>Name: <span><%= name %>!</h3>
          <h3>Email: <span><%= email %>! </h3>
      </div>
      <div class="input-box">
        <i class="bx bx-coin"></i>
        <h3>Points Earned: <span><%= totalPoints %>!</h3>
      </div>
      <div class="input-box">
        <i class='bx bx-bar-chart-alt-2' ></i>
        <h3>Top 3 reviewers:</h3>
          <% topUsers.forEach(user => { %>
            <p><span><%= user.name %></span> - <%= user.totalPoints %> points</p>
          <% }) %>
      </div>
      <div class="input-box">
          <i class='bx bx-edit' ></i>
          <h3>Total Created Products: <span><%= totalProducts %></span></h3>
          <% if (product) { %>
            <h3>Most Recent Product: <span><%= product.title %></span></h3>
            <a href="/daily/product/<%=product.id%>/edit" class="btn">Edit</a>
            <a href="/daily/product/<%=product.id%>/delete" class="btn">Delete</a>
          <% } else { %>
            <h3>No products found</h3>
          <% } %>
        </div>
      <div class="input-box">
        <i class='bx bx-edit' ></i>
        <h3>Total Reviews: <span><%= totalReviews %></span></h3>
        <% if (recentProduct && recentProduct.title) { %>
          <h3>Most Recent Review: <span><%= recentProduct.title %></span></h3>
          <a href="/review/product/<%=recentProduct.id%>/edit" class="btn">Edit</a>
          <a href="/review/product/<%=recentProduct.id%>/delete" class="btn">Delete</a>
        <% } else { %>
          <h3>No recent review</h3>
        <% } %>
      </div>
      </div>
    </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
